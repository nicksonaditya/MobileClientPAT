<!-- button_pressed_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Pressed state color -->
            <corners android:radius="8dp"/> <!-- Example corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107"/> <!-- Normal state color -->
            <corners android:radius="8dp"/> <!-- Example corner radius -->
        </shape>
    </item>
</selector>
